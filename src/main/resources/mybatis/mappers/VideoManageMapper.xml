<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yayiabc.http.mvc.dao.VideoManageDao">

	<resultMap type="com.yayiabc.http.mvc.pojo.jpa.VidManage" id="c">
		<id column="vi_id" property="viId" />
		<result column="video_name" property="vidName" />
		<result column="video_type" property="videoType" />
		<result column="video_route" property="vidRoute" />
	</resultMap>
	<select id="showVid" resultMap="c">
		select * from vid_manage
	</select>

	<insert id="insertVid" parameterType="com.yayiabc.http.mvc.pojo.jpa.VidManage">
		<if test="vidManage!=null">
			insert into vid_manage(video_name,video_type,video_route)
			values(#{vidManage.vidName},#{vidManage.videoType},#{vidManage.vidRoute})
		</if>
	</insert>

	<update id="updateVid" parameterType="com.yayiabc.http.mvc.pojo.jpa.VidManage">
		update vid_manage
		<set>
			<if test="vidName!=null">
				video_name=#{vidName},
			</if>
			<if test="videoType!=null">
				video_type=#{vidType},
			</if>
			<if test="videoType!=null">
				video_route=#{vidRoute},
			</if>
		</set>
		<where>
			<if test="viId!=null">
				vi_id=#{viId}
			</if>
		</where>
	</update>
	<delete id="deleteVid">
		delete from vid_manage where vi_id= #{viId}
	</delete>
</mapper>