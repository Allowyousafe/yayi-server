<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yayiabc.http.mvc.dao.SaleLogDao">
	<select id="getAppCode" resultType="HashMap">
		SELECT appid,secret FROM wx_webapp WHERE id = 1
	</select>

	<select id="getUser" resultType="HashMap">
		SELECT uid FROM wx_userlink WHERE openid = {_parameter}
	</select>

	<insert id="addUser">
		INSERT INTO wx_userlink (uid,openid,type) VALUES (#{saleId},#{openid},1)
	</insert>
	
	<insert id="addSaleUser">
		INSERT INTO wx_userlink (uid,openid,type) VALUES (#{saleId},#{openid},2)
	</insert>

</mapper>